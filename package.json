{
  "name": "simple-static-front-end-scaffold",
  "version": "0.1.0",
  "description": "Simple static front-end scaffold without frameworks",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:scss": "node-sass --output-style compressed -o dist src/assets/scss",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "css:lint": "stylelint src/assets/scss/*.scss  --custom-syntax postcss-scss",
    "build:css": "yarn css:lint && yarn css:scss && yarn css:autoprefixer",
    "build:img": "imagemin src/assets/img/**/* --out-dir=dist/img",
    "build:js": "webpack --mode=production",
    "build:html": "posthtml -c posthtml.json",
    "build": "run-p build:*",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "watch:css": "onchange \"src/assets/scss\" -- yarn build:css",
    "watch:img": "onchange \"src/assets/img\" -- yarn build:img",
    "watch:js": "onchange \"src/assets/js\" -- webpack --mode=development",
    "watch:html": "onchange \"src/views\" -- yarn build:html",
    "watch": "run-p  serve watch:*"
  },
  "keywords": [],
  "author": "ToNy RANDRIAMANANTSOA <tonyrandriamanantsoa.to@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/preset-env": "^7.18.0",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.5",
    "browser-sync": "^2.27.10",
    "eslint": "^8.16.0",
    "eslint-webpack-plugin": "^3.1.1",
    "htmlnano": "^2.0.2",
    "imagemin-cli": "^7.0.0",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.0.0",
    "postcss-cli": "^9.1.0",
    "postcss-scss": "^4.0.4",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-modules": "^0.9.0",
    "stylelint": "^14.8.3",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  }
}
